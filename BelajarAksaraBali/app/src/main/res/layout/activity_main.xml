<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raditya.belajaraksarabali.MainActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/swing_play"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <ImageView
        android:id="@+id/swing_play1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/mulaibutt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="pindah"
        android:background="@drawable/mulai"/>

    <Button
        android:id="@+id/tentangbutt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mulaibutt"
        android:layout_centerHorizontal="true"
        android:onClick="pindah1"
        android:background="@drawable/tentang"/>

    <Button
        android:id="@+id/keluarbutt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tentangbutt"
        android:onClick="pindah2"
        android:background="@drawable/keluar"/>

    <Button
        android:id="@+id/suarabutt"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/mute" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="270dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logomenu"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
